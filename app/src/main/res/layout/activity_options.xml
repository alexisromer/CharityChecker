<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_purple"
    tools:context=".optionsActivity">

    <ImageView
        android:id="@+id/donateImageView"
        android:layout_width="174dp"
        android:layout_height="179dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/boxImageView"
        app:layout_constraintEnd_toStartOf="@+id/boxImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/looking_textView"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/donate_logo" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="174dp"
        android:layout_height="179dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toTopOf="@+id/boxImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toEndOf="@+id/donateImageView"
        app:layout_constraintTop_toBottomOf="@+id/looking_textView"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/foodbanks_logo" />

    <ImageView
        android:id="@+id/bloodImageView"
        android:layout_width="174dp"
        android:layout_height="179dp"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/boxImageView"
        app:layout_constraintEnd_toEndOf="@+id/foodImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/boxImageView"
        app:layout_constraintTop_toBottomOf="@+id/foodImageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/blood_logo"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/boxImageView"
        android:layout_width="174dp"
        android:layout_height="179dp"
        android:layout_marginTop="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/looking_textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/boxes_logo" />

    <TextView
        android:id="@+id/looking_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="What are you looking for?"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>